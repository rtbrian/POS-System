{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "rootDir": ".",                 
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "*.ts"],  
  "exclude": ["node_modules", "dist"]
}
